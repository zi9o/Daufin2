{% extends 'ComDaufinBundle::layout.html.twig' %}

{% block container -%}
    <h1>Site list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libellesite</th>
                <th>Adressite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('com_site_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.libelleSite }}</td>
                <td>{{ entity.adresSite }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('com_site_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('com_site_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('com_site_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
